<!-- index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="main.js" defer></script>
    <!-- <link rel="stylesheet" href="https://kit.fontawesome.com/ac2d4a9c2c.css" crossorigin="anonymous"> -->
    <script src="https://kit.fontawesome.com/ac2d4a9c2c.js" crossorigin="anonymous"></script>
    <title>Star Was Quote App</title>
</head>
<body>
    <h1>May Node and Express be with you!</h1>

    <!-- The action route must match with our app.post route -->
    <!-- The name on the input section will be composed of the request body(object) which has the name and quote properties -->
    <form action="/quotes" method="POST"> 
        <input type="text" placeholder="author" name="author"> 
        <input type="text" placeholder="quote" name="quote">
        <button type="submit">Submit</button>
    </form>
    
    <h2>Quotes</h2>

    <ul class="quotes">
        <!-- Loop through quotes -->
        <% for(i = 0; i < quotes.length; i++) {%> 
          <li class="quote">
            <!-- Output author from the iterated quote object -->
            <span><%= quotes[i].author %></span> :
            <!-- Output quote from the iterated quote object -->
            <span><%= quotes[i].quote %></span>
            <span>0</span>
            <i class="fa fa-thumbs-up"></i>
            <i class="fa fa-trash"></i>
          </li>
        <% } %>
    </ul>
    <div>
        <h2>Darth Vader invades!</h2>
        <p>
          Replace first Yoda's quote with a quote written by Darth Vader
        </p>
        <button id="update-button">Replace Yoda's quote</button>
    </div>
    <div>
        <h2>Remove Darth Vader!</h2>
        <p>
          Delete one Darth Vader's quote. Does nothing if there are no more Darth
          Vader's quote
        </p>
        <button id="delete-button">Delete Darth Vader's quote</button>
    </div>
    <div id="message"></div>

</body>
</html>